generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Task {
  @@map("tasks")
  id String @id
  title String
  description String
  status String
  tag tag @relation(fields: [tagId], references: [id])
  tagId String
}

model tag {
  @@map("tags")
  id String @id
  name String
  createAt DateTime
  updateAt DateTime
  tasks Task[]
}